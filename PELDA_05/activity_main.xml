<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#000000"
tools:context=".MainActivity">

<androidx.constraintlayout.widget.Guideline
 android:id="@+id/guideline2"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="vertical"
 app:layout_constraintGuide_end="370dp" />

<TextView
 android:id="@+id/infotext"
 android:layout_width="323dp"
 android:layout_height="346dp"
 android:text="Indulás..."
 android:textAlignment="viewStart"
 android:textColor="#CDDC39"
 android:textSize="24sp"
 app:layout_constraintBottom_toBottomOf="parent"
 app:layout_constraintEnd_toEndOf="parent"
 app:layout_constraintHorizontal_bias="0.534"
 app:layout_constraintStart_toStartOf="parent"
 app:layout_constraintTop_toTopOf="parent"
 app:layout_constraintVertical_bias="0.28" />

<TextView
 android:id="@+id/masodperckijelzo"
 android:layout_width="194dp"
 android:layout_height="38dp"
 android:layout_marginBottom="188dp"
 android:text="5 másodperc"
 android:textAlignment="viewStart"
 android:textColor="#447E0A"
 android:textSize="24sp"
 app:layout_constraintBottom_toBottomOf="@+id/btnKilepes"
 app:layout_constraintEnd_toEndOf="parent"
 app:layout_constraintHorizontal_bias="0.202"
 app:layout_constraintStart_toStartOf="parent" />

<SeekBar
 android:id="@+id/idokoz"
 style="@style/Widget.AppCompat.SeekBar.Discrete"
 android:layout_width="319dp"
 android:layout_height="33dp"
 android:layout_marginBottom="140dp"
 android:max="5"
 android:progress="0"
 android:scrollbarSize="10dp"
 app:layout_constraintBottom_toBottomOf="@+id/btnKilepes"
 app:layout_constraintEnd_toEndOf="parent"
 app:layout_constraintHorizontal_bias="0.509"
 app:layout_constraintStart_toStartOf="parent" />

<Button
 android:id="@+id/btnUjraindit"
 android:layout_width="256dp"
 android:layout_height="55dp"
 android:layout_marginBottom="88dp"
 android:text="Restart"
 android:textAlignment="center"
 android:textSize="24sp"
 app:layout_constraintBottom_toBottomOf="parent"
 app:layout_constraintEnd_toEndOf="parent"
 app:layout_constraintHorizontal_bias="0.529"
 app:layout_constraintStart_toStartOf="parent" />

<Button
 android:id="@+id/btnKilepes"
 android:layout_width="258dp"
 android:layout_height="54dp"
 android:layout_marginBottom="16dp"
 android:text="Exit"
 android:textSize="24sp"
 app:layout_constraintBottom_toBottomOf="parent"
 app:layout_constraintEnd_toEndOf="parent"
 app:layout_constraintHorizontal_bias="0.535"
 app:layout_constraintStart_toStartOf="parent" />

<TextView
 android:id="@+id/iranyszoveg"
 android:layout_width="136dp"
 android:layout_height="45dp"
 android:layout_marginBottom="204dp"
 android:text="-"
 android:textColor="#8BC34A"
 android:textSize="36sp"
 android:textStyle="bold"
 app:layout_constraintBottom_toBottomOf="parent"
 app:layout_constraintEnd_toEndOf="parent"
 app:layout_constraintHorizontal_bias="0.863"
 app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
